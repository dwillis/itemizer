
<table class="table table-striped tablesorter-blue">
  <thead>
    <tr>
      <th></th>
      <th>Form type</th>
      <th>Entity type</th>
      <th>Payee name</th>
      <th>Payee state</th>
      <th>Date</th>
      <th>Amount</th>
      <th>Purpose</th>
    </tr>
  </thead>
  <tbody>
  <% @itemizations.each do |item| %>
    <tr>
      <td id="<%= item[:transaction_id_number] %>"><a href="#<%= item[:transaction_id_number] %>">#</a></td>
      <td><%= item[:form_type] %></td>
      <td><%= item[:entity_type] %></td>
      <td><%= display_payee(item) %></td>
      <td><%= item[:payee_state] %></td>
      <td><%= display_date(item[:expenditure_date]) %></td>
      <td><%= number_with_delimiter(item[:expenditure_amount]) %></td>
      <td><%= item[:expenditure_purpose_descrip] %></td>
    </tr>
  <% end %>
  </tbody>
</table>

