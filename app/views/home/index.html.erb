<h1>Today's Filings</h1>

<table class="table table-striped">
  <tr>
    <th>Committee</th>
    <th>Report title</th>
    <th>Form type</th>
    <th>End Date</th>
    <th>Amendment</th>
    <th>Receipts</th>
    <th>Spending</th>
  </tr>

<% @fec_filings.each do |fec_filing| %>
  <tr>
    <td><%= fec_filing.committee_name %></td>
    <td><%= link_to fec_filing.report_title, fec_filing.fec_uri %></td>
    <td><%= fec_filing.form_type %></td>
    <td><%= fec_filing.date_coverage_to %></td>
    <td><%= link_to("compare", "http://comparinator.herokuapp.com/fec_filings/#{fec_filing.original_filing}/#{fec_filing.filing_id}") if fec_filing.is_amendment %></td>
    <td><%= build_link(fec_filing, 'a') %></td>
    <td><%= build_link(fec_filing, 'b') %></td>
  </tr>
<% end %>
</table>
